@model RegisterVM;

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutLR.cshtml";
}

<form asp-controller="Account" asp-action="Register" method="post">
    <h3 class="text-muted mb-1 text-center" style="font-size:20px;">Create an Account</h3>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label class="mb-3" asp-for="Email"></label><span class="text-danger">*</span>
        <input type="email" class="form-control" asp-for="Email" autocomplete="Email" placeholder="Enter Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="mb-3" asp-for="Password"></label><span class="text-danger">*</span>
        <input type="password" class="form-control" asp-for="Password" placeholder="Create Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="mb-3" asp-for="ConfirmPassword"></label><span class="text-danger">*</span>
        <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="float-end">
        <button type="submit" class="btn btn-primary m-2">Register</button>
    </div>
</form>

@section scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
}