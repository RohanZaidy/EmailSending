@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar nav">
        @if (SignInManager.IsSignedIn(User))
        {
		<li class="nav-item">
			<a class="text-muted text-dark text-decoration-none me-2">Hello @UserManager.GetUserName(User)</a>
		</li>
		<li class="nav-item">
			<a title="LogOut" class="nav-link text-danger border-start" asp-controller="Account" asp-action="Logout"><i class="fas fa-sign-out-alt"></i></a>
		</li>
	    }
	    else
	    {
		<li class="nav-item">
			<a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" asp-controller="Account" asp-action="Register">register</a>
		</li>
	    }
</ul>